<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <widgets.MyActionBar
        android:id="@+id/action_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:layout_marginTop="2dp"
        android:background="@color/divide_color" >
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:layout_weight="2.45"
        android:padding="1dp"
        android:background="@drawable/border">

        <com.androidplot.xy.XYPlot
            android:id="@+id/plot"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.11"
        android:gravity="center">

        <View
            android:id="@+id/horizontalCenterline"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/hr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/horizontalCenterline"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="--"
            android:textSize="80sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignParentLeft="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/hr"
            android:layout_alignTop="@id/hr"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            android:text="HR"
            android:textSize="26sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/hr"
            android:layout_alignRight="@id/hr"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="5dp"
            android:text="bpm"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/spo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/horizontalCenterline"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="--"
            android:textSize="80sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="false" />

        <TextView
            android:id="@+id/spo2label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/spo2"
            android:layout_alignTop="@id/spo2"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            android:paddingBottom="5dp"
            android:text="SpO2"
            android:lineSpacingExtra="4dp"
            android:textSize="26sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/spo2"
            android:layout_alignRight="@id/spo2"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="5dp"
            android:text="%"
            android:textSize="22sp"
            android:id="@+id/textView2" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1.46"></LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="208dp"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:layout_weight="0.97"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="Connect"
        android:textSize="22sp"
        android:radius="30dp"
        android:layout_gravity="center|top"
        android:gravity="center" />


    <include
        android:id="@+id/footer_bar"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        layout="@layout/footerbar"
        android:layout_weight="0.08" />

</LinearLayout>
