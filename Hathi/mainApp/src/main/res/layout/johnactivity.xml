<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.pnuemoniaproject.hathi.johnactivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="bottom"
            android:id="@+id/linearLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="First Name"
                android:id="@+id/textView3"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:id="@+id/editFirst"
                android:gravity="center|bottom"
                android:inputType="text"
                android:maxLines="1"
                android:layout_gravity="center|bottom" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Last Name"
                android:id="@+id/LastName"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editLast"
                android:layout_gravity="center_horizontal|bottom"
                android:inputType="text"
                android:maxLines="1"
                android:lines="1"
                android:gravity="center|bottom" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Patient ID"
                android:id="@+id/textView6"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editID"
                android:layout_gravity="center|bottom"
                android:maxLines="1"
                android:inputType="number"
                android:gravity="center|bottom"
                android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Patient Age"
                android:id="@+id/textView5"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editAge"
                android:layout_gravity="center|bottom"
                android:gravity="center|bottom"
                android:inputType="number"
                android:maxLines="1"
                android:maxLength="2"
                android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Gender"
                android:id="@+id/textView4"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center|bottom"
                android:id="@+id/Gender">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:id="@+id/Male"
                    android:layout_gravity="center|bottom" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:id="@+id/Female"
                    android:layout_gravity="center|bottom" />

            </RadioGroup>
        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="126dp"
        android:text="Continue"
        android:id="@+id/buttonLog"
        android:layout_gravity="bottom|right"
        android:background="@drawable/button_states"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="126dp"
        android:text="Back"
        android:id="@+id/backIntro"
        android:background="@drawable/disagree_btn_states"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonLog"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/buttonLog" />

</RelativeLayout>
